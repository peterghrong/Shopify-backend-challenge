{
	"compilerOptions": {
		"skipLibCheck": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist/js",
		"rootDir": "src",
		"noImplicitAny": false,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
